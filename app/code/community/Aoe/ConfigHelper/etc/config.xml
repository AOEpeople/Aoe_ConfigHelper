<?xml version="1.0"?>
<config>
    <modules>
        <Aoe_ConfigHelper>
            <version>1.0.0</version>
        </Aoe_ConfigHelper>
    </modules>
    <global>
        <helpers>
            <Aoe_ConfigHelper>
                <class>Aoe_ConfigHelper_Helper</class>
            </Aoe_ConfigHelper>
        </helpers>
        <blocks>
            <Aoe_ConfigHelper>
                <class>Aoe_ConfigHelper_Block</class>
            </Aoe_ConfigHelper>
            <adminhtml>
                <rewrite>
                    <system_config_form>Aoe_ConfigHelper_Block_Adminhtml_System_Config_Form</system_config_form>
                    <system_config_form_field>Aoe_ConfigHelper_Block_Adminhtml_System_Config_Form_Field</system_config_form_field>
                </rewrite>
            </adminhtml>
        </blocks>
        <models>
            <Aoe_ConfigHelper>
                <class>Aoe_ConfigHelper_Model</class>
            </Aoe_ConfigHelper>
        </models>
        <aoe_confighelper>
            <restricted_paths>
            </restricted_paths>
        </aoe_confighelper>
    </global>
    <default>
        <dev>
            <aoe_confighelper>
                <hinting_active>1</hinting_active>
                <restriction_mode>warning</restriction_mode>
            </aoe_confighelper>
        </dev>
    </default>
</config>
